    line_length_linter = NULL,
    commented_code_linter = NULL,
    whitespace_linter = NULL,
    line_length_linter = NULL, 
    object_length_linter = NULL,
    quotes_linter = NULL,
    T_and_F_symbol_linter = NULL,
    object_name_linter = NULL,
    trailing_blank_lines_linter = NULL,
    brace_linter = NULL,
    indentation_linter(
      indent = 2L,
      hanging_indent_style = "tidy",
      assignment_as_infix = TRUE),
    assignment_linter(
      allow_cascading_assign = FALSE, 
      allow_right_assign = TRUE, 
      allow_trailing = TRUE, 
      allow_pipe_assign = TRUE),
    trailing_whitespace_linter(
      allow_empty_lines = TRUE, 
      allow_in_strings = TRUE)
  )

