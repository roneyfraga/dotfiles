
[
    { "keys": [":",";"], "type": "function", "command": "enter_command_line_mode" },

    { "keys": ["l"], "type": "function", "command": "focus_next" },
    { "keys": ["h"], "type": "function", "command": "focus_previous" },
    { "keys": ["k"], "type": "function", "command": "move_up" },
    { "keys": ["j"], "type": "function", "command": "move_down" },
    { "keys": ["gg"], "type": "function", "command": "page_up" },
    { "keys": ["G"], "type": "function", "command": "page_down" },
    { "keys": ["/"], "type": "prompt", "command": "search \"\"", "cursorPosition": -2 },

    { "keys": ["tc"], "type": "function", "command": "toggle_console" },
    { "keys": ["tm"], "type": "function", "command": "toggle_metadata" },

    { "keys": ["mn"], "type": "prompt", "command": "mknote \"\"", "cursorPosition": -2 },
    { "keys": ["mt"], "type": "prompt", "command": "mktodo \"\"", "cursorPosition": -2 },
    { "keys": ["mb"], "type": "prompt", "command": "mkbook \"\"", "cursorPosition": -2 },

    { "keys": ["yn"], "type": "prompt", "command": "cp $n \"\"", "cursorPosition": -2 },
    { "keys": ["yb"], "type": "prompt", "command": "cp $b \"\"", "cursorPosition": -2 },
    { "keys": ["dd"], "type": "prompt", "command": "mv $n  ", "cursorPosition": -2 },
    { "keys": ["DELETE", "BACKSPACE", "D"], "type": "function", "command": "delete" },

    { "keys": ["ENTER", "ci"], "type": "function", "command": "activate" },
    { "keys": ["cn"], "type": "prompt", "command": "ren $n \"\"", "cursorPosition": -2 },
    { "keys": ["cb"], "type": "prompt", "command": "ren $b \"\"", "cursorPosition": -2 },
    { "keys": ["ca"], "type": "prompt", "command": "ren $c \"\"", "cursorPosition": -2 },

    { "keys": ["q"], "type": "prompt", "command": "exit" },
    { "keys": ["sy"], "type": "prompt", "command": "sync" }

]
