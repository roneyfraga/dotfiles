# library
snippet lib
	library(${1:package}) ${2}
# require
snippet req
	require(${1:package}) ${2}
# source 
snippet sou
	source('${1:file}') ${2:}
# install.packages
snippet install
	install.packages(c('${1:package.name}'), dependencies = TRUE) ${2}
# magrittR pipe
snippet pipe
	%>>%  
# pipeR  pipe
snippet pp
	%>%  
snippet p
	|>  
snippet o
	->  
# If Condition
snippet if
	if(${1:condition}){
	    ${2:}
	}${3:}
snippet els
	else {
	    ${1:}
	}${2:}
snippet whi
	while(${1:condition}){
	    ${2:}
	}${3:}
# For Loop
snippet for
	for(${1:i} in ${2:range}){
	    ${3:}
	}${4:}
# lambda
snippet lam
	{\(${1:x}) ${2}}() ${3}
# function
snippet fun
	function(${1:x}) ${2}
# repeat
snippet rep
	repeat{
	    ${1:}
	    if(${2:condition}) break
	}${3:}
# progress_bar
snippet pro
	progress::progress_bar$new(format = "[:bar] :current/:total (:percent)", total = length(${1:length()}))
# return
snippet ret
	return(${1})
	${2:}
# dataframes, lists, etc
snippet df
	${1:name}[${2:rows}, ${3:cols}] ${4:}
snippet mat
	matrix(${1:data}, nrow = ${2:rows}, ncol = ${3:cols}) ${4:}
# apply functions
snippet app
	apply(${1:array}, ${2:margin}, ${3:function}) ${4:}
snippet lap
	lapply(${1:list}, ${2:function}) ${3:}
snippet sap
	lapply(${1:list}, ${2:function}) ${3:}
snippet vap
