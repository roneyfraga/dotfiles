
# BINDINGS {{{

# Variables
  set $super    Mod4
    set $alt      Mod1
    set $swap     Mod4+Control
    set $exec     exec --no-startup-id
    set $always   exec_always --no-startup-id
# Default applications
    set $filer    nautilus
    set $browser  firefox
    set $terminal st
    set $player   mpv
# General bindings
    bindsym $super+Tab              workspace back_and_forth

# free keys
# bindsym a, y, i, p, z, x, c, v, ', /, \
# }}}

# UTILS {{{
# kill focused window
  bindsym $super+q kill

# reload the configuration file
    bindsym $super+Shift+c reload

# restart i3 inplace
    bindsym $super+Shift+r restart;

# exit i3
  bindsym $super+Shift+q exec i3-msg exit

# start a terminal
# bindsym $super+Return exec "st -t 'Simple Terminal' -f 'Source Code Pro:style=Semibold:size=11'"
# bindsym $super+Return exec "terminator"
    bindsym $super+Return exec "wezterm"

# inverted colors
# bindsym $super+i exec xrandr-invert-colors
# bindsym $super+Shift+1 exec xrandr-invert-colors -s 0
# bindsym $super+Shift+2 exec xrandr-invert-colors -s 1
# bindsym $super+Shift+3 exec xrandr-invert-colors -s 2

# Set shut down, restart and locking features
    bindsym $super+0 mode "$mode_system"
    set $mode_system (l)ock, (e)xit, switch_(u)ser, (s)uspend, (h)ibernate, (r)eboot, (Shift+s)hutdown
    mode "$mode_system" {
      bindsym l exec --no-startup-id i3exit lock, mode "default"
        bindsym s exec --no-startup-id i3exit suspend, mode "default"
        bindsym u exec --no-startup-id i3exit switch_user, mode "default"
        bindsym e exec --no-startup-id i3exit logout, mode "default"
        bindsym h exec --no-startup-id i3exit hibernate, mode "default"
        bindsym r exec --no-startup-id i3exit reboot, mode "default"
        bindsym Shift+s exec --no-startup-id i3exit shutdown, mode "default"

# exit system mode: "Enter" or "Escape"
        bindsym Return mode "default"
        bindsym Escape mode "default"
    }
# }}}

# AUDIO {{{
# sound-section - DO NOT EDIT if you wish to automatically upgrade Alsa -> Pulseaudio later! ##

# start pulseaudio
# exec_always pulseaudio --start

# icon
  exec --no-startup-id volumeicon 

# Pulse Audio controls
# 
# para encontrar a saÃ­da de audio (0 ou 1)
# > pacmd list-sinks | grep -e 'name:' -e 'index:'
# 
# multimidia keys
    bindsym XF86AudioRaiseVolume exec --no-startup-id sh -c "pactl set-sink-volume 1 +7%"   # increase sound volume
    bindsym XF86AudioLowerVolume exec --no-startup-id sh -c "pactl set-sink-volume 1 -7%"   # decrease sound volume
    bindsym XF86AudioMute exec --no-startup-id sh -c "pactl set-sink-mute 1 toggle"          # mute sound
# super+f12
# super+f11
# super+f10
    bindcode $super+96 exec --no-startup-id sh -c "pactl set-sink-volume 1 +7%"            # increase sound volume 
    bindcode $super+95 exec --no-startup-id sh -c "pactl set-sink-volume 1 -7%"            # decrease sound volume 
    bindcode $super+76 exec --no-startup-id sh -c "pactl set-sink-mute 1 toggle"           # mute sound           
# }}}

# APPEARANCE {{{
  font xft:URWGothic-Book 11

# COLORS                border  backgrd text    indicator
# set window colors
    client.focused          #4E9C00 #4E9C00 #FFFFFF #FFFFFF
    client.focused_inactive #1B3600 #1B3600 #FFFFFF #FFFFFF
    client.unfocused        #333333 #333333 #888888 #FFFFFF
    client.urgent           #C20000 #C20000 #FFFFFF #FFFFFF
# }}} 

# GAPS {{{
# Set inner/outer gaps
  gaps inner 1
    gaps outer 1

# Smart gaps (gaps used if only more than one container on the workspace)
    smart_gaps on
    smart_borders on

    for_window [class="^.*"] border pixel 3

# }}}

# BARS {{{
# Start i3bar to display a workspace bar (plus the system information i3status if available)
  bar {
    i3bar_command i3bar
      status_command i3status
      position bottom

## please set your primary output first. Example: 'xrandr --output eDP1 --primary'
      tray_output primary
      tray_output HDMI-0

      bindsym button4 nop
      bindsym button5 nop
#   font xft:URWGothic-Book 11
      strip_workspace_numbers yes

      colors {
        background #222D31
          statusline #F9FAF9
          separator  #454947

#                      border  backgr. text
          focused_workspace  #F9FAF9 #16a085 #292F34
          active_workspace   #595B5B #353836 #FDF6E3
          inactive_workspace #595B5B #222D31 #EEE8D5
          binding_mode       #16a085 #2C2C2C #F9FAF9
          urgent_workspace   #16a085 #FDF6E3 #E5201D
      }
  }
# }}}

# BEHAVIOR {{{
  focus_follows_mouse no
# Mouse+$super to drag floating windows
    floating_modifier $alt
# If popup when fullscreen
    popup_during_fullscreen smart
# $super+self go to prev workspace
    workspace_auto_back_and_forth yes
# delay windows hint focus uppon wkspc change
    force_display_urgency_hint 500 ms
# Focus if the windows is in the cur wkspc
    focus_on_window_activation smart
# }}}

# APP SHORTCUTS {{{
# Rofi
  bindsym $super+space exec "rofi -combi-modi window,drun,ssh -theme solarized -font 'hack 10' -show combi"

# rofi-calc
    bindsym $super+c exec --no-startup-id "rofi -show calc -theme solarized -font 'hack 13'  -modi calc -no-show-match -no-sort"
# }}}

# TREE {{{
  bindsym $super+u        focus parent
    bindsym $super+d        focus child
    bindsym $super+f        fullscreen  toggle
    bindsym $super+Shift+f  fullscreen  toggle global
# Change container layout (stacked, tabbed, default)
    bindsym $super+w layout tabbed
    bindsym $super+e layout stacking
    bindsym $super+r layout toggle split
# SetNext container as: split[h|v], stab, stack
    bindsym $super+bar      split h
    bindsym $super+minus    split v
    bindsym $super+Shift+t  split t; layout tabbed
    bindsym $super+Shift+s  split t; layout stacking
# Float | scratchpad
    bindsym $super+m        floating toggle
    bindsym $super+n        focus mode_toggle
    bindsym $super+bracketright     scratchpad show
    bindsym $super+bracketleft      move scratchpad
# }}}

# WORKSPACES {{{
# switch to workspace
  bindsym $super+1 workspace 1
    bindsym $super+2 workspace 2
    bindsym $super+3 workspace 3
    bindsym $super+4 workspace 4
    bindsym $super+5 workspace 5
    bindsym $super+6 workspace 6
    bindsym $super+7 workspace 7
    bindsym $super+8 workspace 8
    bindsym $super+9 workspace 9
# move focused container to workspace
    bindsym Shift+$alt+1 move container to workspace 1; workspace 1
    bindsym Shift+$alt+2 move container to workspace 2; workspace 2
    bindsym Shift+$alt+3 move container to workspace 3; workspace 3
    bindsym Shift+$alt+4 move container to workspace 4; workspace 4
    bindsym Shift+$alt+5 move container to workspace 5; workspace 5
    bindsym Shift+$alt+6 move container to workspace 6; workspace 6
    bindsym Shift+$alt+7 move container to workspace 7; workspace 7
    bindsym Shift+$alt+8 move container to workspace 8; workspace 8
    bindsym Shift+$alt+9 move container to workspace 9; workspace 9
# move the whole workspace to the next output
    bindsym $super+Control+l move workspace to output right
    bindsym $super+Control+h move workspace to output left
# }}}

# MOVEMENT {{{
# change focus
  bindsym $super+h focus left
    bindsym $super+j focus down
    bindsym $super+k focus up
    bindsym $super+l focus right
# move focused window
    bindsym $alt+h   move  left
    bindsym $alt+j   move  down
    bindsym $alt+k   move  up
    bindsym $alt+l   move  right
# }}}

# MODES {{{
  bindsym $super+semicolon mode "Normal"
    mode "Normal" {
# Get back from inception
      bindsym $super+semicolon mode "default"
        bindsym BackSpace mode "default"
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym Control+c mode "default"
# Actions
        bindsym r mode "Normal:Resize: [hjkl|HJKL]"
        bindsym m mode "Normal:Move: [hjkl|HJKL]"
    }
# RESIZE {{{
  mode "Normal:Resize: [hjkl|HJKL]" {
# Get back from inception
    bindsym $super+semicolon mode "default"
      bindsym BackSpace mode "default"
      bindsym Return mode "default"
      bindsym Escape mode "default"
      bindsym Control+c mode "default"
      bindsym q mode "default"
# Actions
      bindsym h       resize shrink width  5  px or 5  ppt
      bindsym j       resize grow   height 5  px or 5  ppt
      bindsym k       resize shrink height 5  px or 5  ppt
      bindsym l       resize grow   width  5  px or 5  ppt
      bindsym Shift+h resize shrink width  10 px or 10 ppt
      bindsym Shift+j resize grow   height 10 px or 10 ppt
      bindsym Shift+k resize shrink height 10 px or 10 ppt
      bindsym Shift+l resize grow   width  10 px or 10 ppt
  }
# }}}
# MOVE {{{
  mode "Normal:Move: [hjkl|HJKL]" {
# Get back from inception
    bindsym $super+semicolon mode "default"
      bindsym BackSpace mode "default"
      bindsym Return mode "default"
      bindsym Escape mode "default"
      bindsym Control+c mode "default"
      bindsym q mode "default"
# Actions
      bindsym h   move  left  15
      bindsym j   move  down  15
      bindsym k   move  up    15
      bindsym l   move  right 15
      bindsym Shift+h   move  left  50
      bindsym Shift+j   move  down  50
      bindsym Shift+k   move  up    50
      bindsym Shift+l   move  right 50
  }
# }}}
# }}}

# KEYBOARD {{{

# any english US keyboard
  exec_always setxkbmap -layout us -variant intl -option caps:ctrl_modifier -option shift:both_capslock_cancel 

# Mode
    set $mode_keyboard Keyboard: [e]nglish [i]nternational
    bindsym $super+z mode "$mode_keyboard"

    mode "$mode_keyboard"{
# Get back from inception
      bindsym $super+z mode "default"
        bindsym BackSpace mode "default"
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym Control+c mode "default"
# Actions
        bindsym e exec --no-startup-id setxkbmap -layout us -option caps:ctrl_modifier -option shift:both_capslock_cancel, mode "default"
        bindsym i exec --no-startup-id setxkbmap -layout us -variant intl -option caps:ctrl_modifier -option shift:both_capslock_cancel, mode "default"
    }
# }}}

# SCREENS {{{

# 1x Compacq 2405wg 1920x1200 vertical + 2x Perseus 27" 2k horizontal 
  exec_always xrandr --output DisplayPort-0 --mode 2560x1440 --pos 3760x0 --rotate normal --output HDMI-A-0 --primary --mode 2560x1440 --pos 1200x0 --rotate normal --output DVI-D-0 --mode 1920x1200 --pos 0x0 --rotate left --output HDMI-A-1-1 --off --output DisplayPort-1-1 --off

# Mode
    set $mode_screen Screens: [h]orizontal-for-all [r]ight-vertical  [l]eft-vertical  
    bindsym $super+x mode "$mode_screen"

    mode "$mode_screen"{
# Get back from inception
      bindsym $super+x mode "default"
        bindsym BackSpace mode "default"
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym Control+c mode "default"
# Action

        bindsym h exec --no-startup-id xrandr --output DisplayPort-0 --mode 2560x1440 --pos 0x154 --rotate normal --output HDMI-A-0 --primary --mode 2560x1440 --pos 2560x154 --rotate normal --output DVI-D-0 --mode 1920x1080 --pos 5120x0 --rotate normal --output HDMI-A-1-1 --off --output DisplayPort-1-1 --off, mode "default"
        bindsym l exec --no-startup-id xrandr --output DisplayPort-0 --mode 2560x1440 --pos 0x154 --rotate right --output HDMI-A-0 --primary --mode 2560x1440 --pos 2560x154 --rotate normal --output DVI-D-0 --mode 1920x1080 --pos 5120x0 --rotate normal --output HDMI-A-1-1 --off --output DisplayPort-1-1 --off, mode "default"
        bindsym r exec --no-startup-id xrandr --output DisplayPort-0 --mode 2560x1440 --pos 0x154 --rotate normal --output HDMI-A-0 --primary --mode 2560x1440 --pos 2560x154 --rotate normal --output DVI-D-0 --mode 1920x1080 --pos 5120x0 --rotate left --output HDMI-A-1-1 --off --output DisplayPort-1-1 --off, mode "default"
    }
# }}}

# AUTOSTART APPS {{{
# Autostart applications
  exec --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1
    exec --no-startup-id nitrogen --restore; sleep 1; compton -b
    exec --no-startup-id nm-applet
    exec --no-startup-id xfce4-power-manager
    exec --no-startup-id pamac-tray
    exec --no-startup-id clipit
    exec --no-startup-id syncthing -no-browser
    bindsym $super+p exec --no-startup-id bash -c 'f=~/Pictures/screenshot_$(date +%Y%m%d-%H%M%S).png && maim -s "$f" && xclip -selection clipboard -t image/png < "$f"'
    exec --no-startup-id ksnip
    exec --no-startup-id goldendict
    exec_always --no-startup-id xautolock -time 30 -locker blurlock
    exec_always --no-startup-id ff-theme-util
    exec_always --no-startup-id fix_xcursor
# exec --no-startup-id telegram-desktop
    exec_always unclutter
    exec --no-startup-id keynav
# exec --no-startup-id synergy-core --server
    exec --no-startup-id insync start

# }}}

