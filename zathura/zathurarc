# ------------------------------
# permite abrir com sepia como padr√£o
#
# Recolor sepia
# set recolor                     true
# set recolor-lightcolor          "#FBF0D9" # fundo
# set recolor-darkcolor           "#654321" # texto 

# ------------------------------
# Colors
#
# Sepia as default color
set recolor                     true
set recolor-lightcolor          "#FBF0D9" # fundo
set recolor-darkcolor           "#654321" # texto 

map ! feedkeys ":set recolor-lightcolor \#ffffff<Return>:set recolor-darkcolor \#000000<Return>"        # default back and whhite
map @ feedkeys ":set recolor-lightcolor \#FBF0D9<Return>:set recolor-darkcolor \#654321<Return>"        # sepia
map \# feedkeys ":set recolor-lightcolor \#073642<Return>:set recolor-darkcolor \#ededed<Return>"       # solarized dark 
map $ feedkeys ":set recolor-lightcolor \#1e1e1e<Return>:set recolor-darkcolor \#d9e6e6<Return>"        # dark gray and white  
map % feedkeys ":set recolor-lightcolor \#000000<Return>:set recolor-darkcolor \#d9e6e6<Return>"        # black and white  

